<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@mipmap/myback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:src="@mipmap/my_icon_remind_default_hdpi" />
        <com.facebook.drawee.view.SimpleDraweeView
            fresco:roundAsCircle="true"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_150"
            android:id="@+id/my_tou"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/my_tou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冬天来了"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/my_name"/>
        <Button
            android:id="@+id/signIn_id"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/my_name"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/hui_hui"
            android:text="签到"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/hui"
            android:id="@+id/my_user_info"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_messiage_default_hdpi"/>
            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的信息"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/hui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/page_id"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_attention_default_xhdpi"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的关注"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recordList_id"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_remind_default_hdpi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="购票记录"/>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/hui"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/feed_back_id"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_feedback_default_xdpi"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="意见反馈"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_version_default_xhdpi"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="最新版本"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_logout_default_xhdpi"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="退出登录"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:text="\@八维移动通信学院毕业作品"/>
</LinearLayout>
