<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.bw.movie.view.MyViews
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_crnema"
        ></com.bw.movie.view.MyViews>

    <RadioGroup
        android:layout_width="@dimen/dp_198"
        android:layout_height="@dimen/dp_25"
        android:id="@+id/film_radio_group"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/film_rb1_id"
            android:gravity="center"
            android:checked="true"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_xuan"
            android:text="推荐影院"
            />

        <RadioButton
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="附近影院"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_xuan"
            android:id="@+id/film_rb2_id"
            android:button="@null"
            />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/film_viewpager_id"
        ></android.support.v4.view.ViewPager>
</LinearLayout>
