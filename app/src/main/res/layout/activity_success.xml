<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccessActivity"
    android:orientation="vertical">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/fankui"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_100"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:text="反馈成功"
        android:textColor="#000000"
        android:textSize="@dimen/sp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/sp_30"
        android:text="感谢你对维度影院的关注与支持，我们会认真处理您的反馈，尽快修复和完善相关功能"
        android:textSize="@dimen/sp_16"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fanhui_id"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:background="@mipmap/com_icon_my_defaultfanhui"/>
    </RelativeLayout>
</LinearLayout>