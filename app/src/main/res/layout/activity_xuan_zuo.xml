<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.activity.XuanZuoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:orientation="vertical"
        android:background="@mipmap/dianyingbg"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_26"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginLeft="@dimen/dp_40"
                android:id="@+id/gou_text_shi"
                android:layout_gravity="center"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---------"
                android:textColor="#fff"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:id="@+id/gou_text_shi_end"
                android:layout_gravity="center"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影院"
                android:layout_marginLeft="@dimen/dp_50"
                android:id="@+id/gou_text_ying"
                android:layout_gravity="center"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/kexuan"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_15"
                >
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/xuanzhong"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选中"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_15"
                >
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/yishou"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_15"
                >
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/textdashgap"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最佳观影区"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#fff"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_gravity="center"
            android:background="@mipmap/rectangle16"
            ></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_230"
        >
        <com.bw.movie.custom.MyView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movie_setview"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/LinPay"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corners_popu"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_334"
        android:layout_height="@dimen/dp_98"
        >

        <TextView
            android:text="合计:"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:textColor="#917E92"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:text="￥"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

        <TextView
            android:id="@+id/PayMoney"
            android:layout_marginLeft="@dimen/dp_0_5"
            android:textSize="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_50" />

        <ImageView
            android:id="@+id/PayTrue"
            android:src="@mipmap/group5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"  />

        <ImageView
            android:id="@+id/PayFalse"
            android:src="@mipmap/group3"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"  />

    </LinearLayout>
</RelativeLayout>