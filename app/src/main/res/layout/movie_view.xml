<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
 
    
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_600"
        android:src="@drawable/white"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_marginTop="@dimen/dp_120"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_180"
           android:orientation="horizontal">
           <com.facebook.drawee.view.SimpleDraweeView
               android:layout_marginLeft="@dimen/dp_20"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_width="@dimen/dp_110"
               android:layout_height="@dimen/dp_150"
               android:id="@+id/moving_iv"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_marginLeft="@dimen/dp_25"
                   android:textColor="#ffffff"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_25"
                   android:id="@+id/moving_name"
                   android:gravity="left"/>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="类型：" />
                   <TextView
                       android:id="@+id/moving_type"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"/>
                 <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:id="@+id/moving_back"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="@dimen/dp_10"
                         android:layout_width="@dimen/dp_40"
                         android:layout_height="@dimen/dp_20"
                         android:src="@mipmap/bcd"/>
                 </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="导演：" />
                   <TextView
                       android:id="@+id/moving_author"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="时长：" />
                   <TextView
                       android:id="@+id/moving_time"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="产地：" />
                   <TextView
                       android:id="@+id/moving_address"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginLeft="@dimen/dp_10"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="剧情简介"
               android:textSize="@dimen/sp_18"
               android:textColor="#000000"
               android:layout_marginLeft="@dimen/dp_20" />
           <TextView
               android:id="@+id/content_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_16"
               android:textColor="#000000"
               android:layout_marginLeft="@dimen/dp_20"
               android:layout_marginRight="@dimen/dp_20"/>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="剧情简介"
               android:textSize="@dimen/sp_18"
               android:textColor="#000000"
               android:layout_marginLeft="@dimen/dp_20" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <Button
                  android:layout_marginTop="@dimen/dp_15"
                  android:layout_width="@dimen/dp_90"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/sp_16"
                  android:text="演员名称"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="@android:color/holo_orange_dark"/>
              <Button
                  android:layout_marginTop="@dimen/dp_15"
                  android:layout_width="@dimen/dp_90"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/sp_16"
                  android:text="饰演角色"
                  android:background="@android:color/holo_orange_dark"
                  android:layout_marginLeft="@dimen/dp_120" />
          </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/name1"
                   android:layout_width="@dimen/dp_100"
                   android:layout_height="wrap_content"
                   android:text="明星："
                   android:textSize="@dimen/sp_18"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_20" />
               <TextView
                   android:text="饰               饰演角色"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_50"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/name2"
                   android:layout_width="@dimen/dp_100"
                   android:layout_height="wrap_content"
                   android:text="明星："
                   android:textSize="@dimen/sp_18"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_20" />
               <TextView
                   android:text="饰               饰演角色"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_50"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/name3"
                   android:layout_width="@dimen/dp_100"
                   android:layout_height="wrap_content"
                   android:text="明星："
                   android:textSize="@dimen/sp_18"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_20" />

               <TextView
                   android:text="饰               饰演角色"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_50"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/name4"
                   android:layout_width="@dimen/dp_100"
                   android:layout_height="wrap_content"
                   android:text="明星："
                   android:textSize="@dimen/sp_18"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_20" />
               <TextView
                   android:text="饰               饰演角色"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#000000"
                   android:layout_marginLeft="@dimen/dp_50"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

</RelativeLayout>
