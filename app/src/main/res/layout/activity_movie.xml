<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieActivity"
    android:orientation="vertical"
    android:background="@mipmap/bei">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/com_icon_movie_default_xhdpi" />
        <TextView
            android:layout_toRightOf="@id/iv"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:text="电影详情"
            android:textSize="@dimen/sp_18"
            android:textColor="#ffffff"/>
            <ImageView
                android:id="@+id/fllow_id"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/com_icon_collection_default"/>
    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:textSize="@dimen/sp_25"
        android:textColor="#ffffff"
        android:id="@+id/movie_name"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_370"
        android:id="@+id/movie_iv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">
        <Button
            android:id="@+id/xiang_id"
            android:background="@drawable/zi"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:text="详情"/>
        <Button
            android:id="@+id/herald_id"
            android:background="@drawable/zi"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:text="预告"/>
        <Button
            android:id="@+id/phone_id"
            android:background="@drawable/zi"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:text="剧照"/>
        <Button
            android:id="@+id/assess_id"
            android:background="@drawable/zi"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:text="影评"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
       <ImageView
           android:layout_width="@dimen/dp_60"
           android:layout_height="@dimen/dp_60"
           android:src="@mipmap/com_icon_my_defaultfanhui"
           android:id="@+id/movie_back"/>
        <Button
            android:id="@+id/buy_id"
           android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/yuan"
            android:text="购票"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#ffffff">

        </Button>
    </RelativeLayout>
</LinearLayout>